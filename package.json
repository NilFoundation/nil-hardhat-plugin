{
  "name": "@nilfoundation/hardhat-plugin",
  "version": "0.1.0",
  "description": "Custom Hardhat plugin to enable seamless deployment and interaction with applications within =nil;",
  "main": "dist/index.js",
  "types": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "git-hooks:update": "git config core.hooksPath .git/hooks/ && rm -rf .git/hooks && npx --no-install simple-git-hooks"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nilfoundation/niljs": "^0.7.0",
    "ethers": "^6.12.1",
    "hardhat": "^2.22.4",
    "viem": "^2.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@lavamoat/allow-scripts": "^3.0.4",
    "@lavamoat/preinstall-always-fail": "^2.0.0",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@biomejs/biome": true,
      "simple-git-hooks": true
    }
  }
}
